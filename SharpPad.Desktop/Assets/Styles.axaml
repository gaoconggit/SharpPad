<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <!-- Application-wide styles -->
  <Style Selector="Window">
    <Setter Property="Background" Value="#1E1E1E"/>
  </Style>

  <Style Selector="Menu">
    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeLowBrush}"/>
  </Style>

  <!-- Loading Screen Animations -->
  <Style Selector="Border.loading-logo">
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:1"/>
        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:1"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="TextBlock.loading-title">
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:0.8"/>
      </Transitions>
    </Setter>
  </Style>

  <Style Selector="TextBlock.floating-code">
    <Setter Property="Transitions">
      <Transitions>
        <DoubleTransition Property="Opacity" Duration="0:0:2"/>
      </Transitions>
    </Setter>
  </Style>

  <!-- Pulse animation for logo -->
  <Style Selector="Border.pulsing-logo">
    <Style.Animations>
      <Animation Duration="0:0:2" IterationCount="Infinite" PlaybackDirection="Alternate">
        <KeyFrame Cue="0%">
          <Setter Property="BoxShadow" Value="0 4 20 0 #007ACC40"/>
        </KeyFrame>
        <KeyFrame Cue="100%">
          <Setter Property="BoxShadow" Value="0 6 30 0 #007ACC60"/>
        </KeyFrame>
      </Animation>
    </Style.Animations>
  </Style>

</Styles>